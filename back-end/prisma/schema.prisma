// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int      @id @default(autoincrement())
  name                String
  email               String   @unique
  password            String
  cnpj                String   @unique
  companyName         String
  socialCapital       Float
  employeesCLT        Int
  employeesOutsourced Int
  partners            Partner[]
}

model Partner {
  id   Int    @id @default(autoincrement())
  name String
  user User   @relation(fields: [userId], references: [id])
  userId Int
}
